<UserControl x:Class="ToolKitV.Views.SelectFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitV.Views"
             mc:Ignorable="d"
             d:DataContext="{Binding Mode=Default, RelativeSource={RelativeSource Self}}">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Title}" Foreground="{StaticResource SecondaryTextBrush}" Style="{StaticResource AgencyBold}" FontSize="12" Margin="0 0 0 8"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource SidebarBgBrush}" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource LineBrush}">
                    <TextBox Padding="10 0"
                             Height="40"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource MainTextBrush}"
                             Style="{StaticResource AgencyRegular}"
                             FontSize="13"
                             Text="{Binding Path}"
                             SelectionBrush="{StaticResource PrimaryAccentBrush}"
                             CaretBrush="{StaticResource PrimaryAccentBrush}"/>
                </Border>

                <Button Grid.Column="1"
                        Cursor="Hand"
                        Margin="10 0 0 0"
                        Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="BtnBorder" Background="{StaticResource SidebarBgBrush}" CornerRadius="8" Width="50" Height="40" BorderThickness="1" BorderBrush="{StaticResource LineBrush}">
                                <TextBlock Text="BUSCAR" Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource AgencyBold}" FontSize="10"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="BtnBorder" Property="Background" Value="{StaticResource GlassHoverBrush}"/>
                                    <Setter TargetName="BtnBorder" Property="BorderBrush" Value="{StaticResource PrimaryAccentBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
