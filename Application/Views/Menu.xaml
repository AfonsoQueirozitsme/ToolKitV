<UserControl x:Class="ToolKitV.Views.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitV.Views"
             mc:Ignorable="d">
    <Grid>
        <ListView BorderThickness="0" Background="Transparent" Padding="0" SelectionChanged="ListView_SelectionChanged">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="ActiveBorder" 
                                        Background="Transparent" 
                                        Margin="0 4" 
                                        CornerRadius="8" 
                                        Height="50"
                                        Cursor="Hand">
                                    <Grid>
                                        <Border x:Name="Indicator" 
                                                HorizontalAlignment="Left" 
                                                Width="4" 
                                                Background="{StaticResource PrimaryAccentBrush}" 
                                                Margin="0 10" 
                                                CornerRadius="2" 
                                                Visibility="Collapsed"/>
                                        <ContentPresenter Margin="15 0 0 0" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ActiveBorder" Property="Background" Value="{StaticResource GlassHoverBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ActiveBorder" Property="Background" Value="{StaticResource ButtonBgBrush}"/>
                                        <Setter TargetName="Indicator" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListViewItem IsSelected="True" Tag="OPTIMIZE">
                <StackPanel Orientation="Horizontal">
                    <Image Width="22" Height="22" Source="../Assets/Images/textureIcon.png" Opacity="0.8"/>
                    <TextBlock Text="OTIMIZADOR" 
                               Foreground="{StaticResource MainTextBrush}" 
                               Style="{StaticResource AgencyBold}" 
                               FontSize="14" 
                               Margin="15 0 0 0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ListViewItem>

            <ListViewItem Tag="DIAGNOSTIC">
                <StackPanel Orientation="Horizontal">
                    <Image Width="22" Height="22" Source="../Assets/Images/logo_small_grey.png" Opacity="0.8"/>
                    <TextBlock Text="DIAGNÓSTICO" 
                               Foreground="{StaticResource MainTextBrush}" 
                               Style="{StaticResource AgencyBold}" 
                               FontSize="14" 
                               Margin="15 0 0 0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ListViewItem>

            <ListViewItem Tag="MANIFEST">
                <StackPanel Orientation="Horizontal">
                    <Image Width="22" Height="22" Source="../Assets/Images/discord.png" Opacity="0.8"/>
                    <TextBlock Text="MANIFESTO" 
                               Foreground="{StaticResource MainTextBrush}" 
                               Style="{StaticResource AgencyBold}" 
                               FontSize="14" 
                               Margin="15 0 0 0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ListViewItem>

            <ListViewItem Tag="RENAME">
                <StackPanel Orientation="Horizontal">
                    <Image Width="22" Height="22" Source="../Assets/Images/minus-outlined.png" Opacity="0.8"/>
                    <TextBlock Text="RENOMEAR" 
                               Foreground="{StaticResource MainTextBrush}" 
                               Style="{StaticResource AgencyBold}" 
                               FontSize="14" 
                               Margin="15 0 0 0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ListViewItem>
        </ListView>
    </Grid>
</UserControl>
