<UserControl x:Class="ToolKitV.Views.LoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="{StaticResource MainBgGradient}">
        <!-- Dynamic Background Elements -->
        <Border Background="Black" Opacity="0.5"/>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- App Branding -->
            <TextBlock Text="KIT DE FERRAMENTAS" 
                       Foreground="{StaticResource SecondaryTextBrush}" 
                       Style="{StaticResource AgencyBold}" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Margin="0 0 0 50"
                       Opacity="0.6"/>

            <!-- Central Logo Container -->
            <Grid Width="180" Height="180">
                <!-- Outer Glow -->
                <Ellipse Width="140" Height="140" Fill="{StaticResource PrimaryAccentBrush}" Opacity="0.05">
                    <Ellipse.Effect>
                        <BlurEffect Radius="60"/>
                    </Ellipse.Effect>
                </Ellipse>

                <!-- Logo Image - Stuck (Static) as requested -->
                <Image Source="pack://application:,,,/Assets/Images/logo_innercircle.png" 
                       x:Name="SpinningLogo"
                       Width="120" Height="120"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <RotateTransform Angle="0"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>

            <!-- Main Heading -->
            <TextBlock Text="FTW STUDIOS" 
                       Foreground="{StaticResource MainTextBrush}" 
                       Style="{StaticResource AgencyBold}" 
                       FontSize="26" 
                       HorizontalAlignment="Center" 
                       Margin="0 40 0 8"/>
            
            <!-- Progress Status -->
            <TextBlock x:Name="StatusText" 
                       Text="INICIALIZAR..." 
                       Foreground="{StaticResource PrimaryAccentBrush}" 
                       Style="{StaticResource AgencyBold}" 
                       FontSize="11" 
                       HorizontalAlignment="Center" 
                       Opacity="0.9">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0.4" To="1" Duration="0:0:1.5"
                                                 AutoReverse="True" RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            
            <!-- Progress Indicator -->
            <Border Width="240" Height="2" Background="{StaticResource LineBrush}" CornerRadius="1" Margin="0 50 0 0">
                <Border x:Name="ProgressBar" Width="0" HorizontalAlignment="Left" Background="{StaticResource PrimaryAccentBrush}" CornerRadius="1">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width"
                                                     From="0" To="240" Duration="0:0:4"
                                                     AutoReverse="True" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                </Border>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
