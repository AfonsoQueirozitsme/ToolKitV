<UserControl x:Class="ToolKitV.Views.Credits"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitV.Views"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Opacity="0.5">
            <TextBlock Text="FTW STUDIOS © 2026" 
                       Foreground="{StaticResource SecondaryTextBrush}" 
                       Style="{StaticResource AgencyBold}" 
                       FontSize="10"
                       HorizontalAlignment="Left"/>
            <TextBlock x:Name="VersionText" 
                       Text="Version 1.0.0" 
                       Foreground="{StaticResource SecondaryTextBrush}" 
                       Style="{StaticResource AgencyRegular}" 
                       FontSize="9"
                       Margin="0 2 0 0"
                       HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
