<UserControl x:Class="ToolKitV.Views.TextureOptimization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitV.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Configuration Section -->
        <StackPanel Grid.Column="0" Margin="0 0 40 0">
            <TextBlock Text="CONFIGURAÇÕES" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" Style="{StaticResource AgencyBold}" Margin="0 0 0 20"/>
            
            <local:SelectFolder
                x:Name="MainFolder"
                Title="Pasta de Texturas"
                PropertyChanged="OnMainPathChanged"/>

            <local:SelectFolder
                x:Name="BackupFolder"
                Title="Pasta de Backup"
                Margin="0 15 0 0"
                PropertyChanged="OnBackupPathChanged"/>

            <Border Height="1" Background="{StaticResource LineBrush}" Margin="0 25"/>

            <UniformGrid Columns="2">
                <local:ToogleButton
                    x:Name="OnlyOverSized"
                    Title="Apenas Ficheiros +16MB"
                    Description="Otimiza apenas dicionários pesados."
                    PropertyChanged="OnOnlyOverSizedTexturesChanged"/>

                <local:ToogleButton
                    x:Name="Downsize"
                    Title="Reduzir Resolução"
                    Description="Reduz o tamanho em 2x."
                    PropertyChanged="Downsize_PropertyChanged"
                    IsToogled="True"/>

                <local:InputNumber
                    x:Name="OptimizeSize"
                    Title="Resolução Máxima"
                    Description="Largura + Altura combinadas."
                    NumberValue="3072"
                    Margin="0 15 15 0"
                    PropertyChanged="OptimizeSize_PropertyChanged"/>

                <local:ToogleButton
                    x:Name="FormatOptimize"
                    Title="Otimizar Formatos"
                    Description="Converte para DDS compactado."
                    Margin="0 15 0 0"
                    IsToogled="True"
                    PropertyChanged="FormatOptimize_PropertyChanged"/>
            </UniformGrid>

            <StackPanel Margin="0 40 0 0" Orientation="Horizontal">
                <local:Button x:Name="OptimizeButton" Title="INICIAR OTIMIZAÇÃO" IsButtonEnabledValue="False" Click="OptimizeButton_Click" Width="200"/>
                <local:Button x:Name="AnalyzeButton" Title="ANALISAR PASTA" IsButtonEnabledValue="False" Click="AnalyzeButton_Click" Margin="20 0 0 0" Width="200"/>
            </StackPanel>
        </StackPanel>

        <!-- Stats / Results Section -->
        <Border Grid.Column="1" Background="{StaticResource GlassBrush}" CornerRadius="12" Padding="20">
            <local:Stats x:Name="Stats"/>
        </Border>
    </Grid>
</UserControl>
