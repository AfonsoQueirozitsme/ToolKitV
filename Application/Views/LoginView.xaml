<UserControl x:Class="ToolKitV.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitV.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="{StaticResource MainBgGradient}">
        <!-- Decorative Elements -->
        <Border Width="800" Height="800" Background="{StaticResource PrimaryAccentBrush}" Opacity="0.03" CornerRadius="400" Margin="-400,-400,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <!-- Logo Section -->
            <Border Width="100" Height="100" Background="{StaticResource SidebarBgBrush}" CornerRadius="50" BorderBrush="{StaticResource LineBrush}" BorderThickness="1" Margin="0 0 0 30">
                <Image Source="pack://application:,,,/Assets/Images/logo_innercircle.png" Margin="20"/>
            </Border>

            <TextBlock Text="AUTENTICAÇÃO" 
                       Foreground="{StaticResource MainTextBrush}" 
                       Style="{StaticResource AgencyBold}" 
                       FontSize="32" 
                       HorizontalAlignment="Center" 
                       Margin="0 0 0 10"/>
            
            <TextBlock Text="FTW STUDIOS SERVICES" 
                       Foreground="{StaticResource PrimaryAccentBrush}" 
                       Style="{StaticResource AgencyBold}" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Margin="0 0 0 50"
                       Opacity="0.8"/>

            <!-- Input Section -->
            <StackPanel Margin="0 0 0 30">
                <TextBlock Text="CHAVE DE ACESSO" 
                           Foreground="{StaticResource SecondaryTextBrush}" 
                           Style="{StaticResource AgencyBold}" 
                           FontSize="11" 
                           Margin="0 0 0 10"/>
                
                <Border Background="{StaticResource SidebarBgBrush}" 
                        CornerRadius="8" 
                        BorderBrush="{StaticResource LineBrush}" 
                        BorderThickness="1" 
                        Height="45">
                    <TextBox x:Name="LicenseInput" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="{StaticResource MainTextBrush}" 
                             Style="{StaticResource AgencyRegular}" 
                             FontSize="14" 
                             VerticalContentAlignment="Center" 
                             Padding="15 0"
                             CaretBrush="{StaticResource PrimaryAccentBrush}"
                             SelectionBrush="{StaticResource PrimaryAccentBrush}"/>
                </Border>
            </StackPanel>

            <TextBlock x:Name="StatusLabel" 
                       Text="" 
                       Foreground="#FF5555" 
                       Style="{StaticResource AgencyBold}" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Margin="0 0 0 20"
                       TextWrapping="Wrap"/>

            <!-- Button -->
            <local:Button x:Name="CheckButton" 
                          Title="ENTRAR NO SISTEMA" 
                          IsButtonEnabledValue="True" 
                          Click="CheckButton_Click" 
                          Height="50"/>

            <TextBlock Text="Copyright © 2026 FTW Studios. All rights reserved." 
                       Foreground="{StaticResource SecondaryTextBrush}" 
                       Style="{StaticResource AgencyRegular}" 
                       FontSize="9" 
                       HorizontalAlignment="Center" 
                       Margin="0 60 0 0" 
                       Opacity="0.4"/>
        </StackPanel>
    </Grid>
</UserControl>
