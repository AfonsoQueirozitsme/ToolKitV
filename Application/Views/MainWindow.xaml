<Window x:Class="ToolKitV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolKitV"
        xmlns:uc="clr-namespace:ToolKitV.Views"
        mc:Ignorable="d"
        Title="FTW Studios | Kit de Ferramentas" Width="1280" Height="720"
        Icon="pack://application:,,,/Assets/Images/logo_innercircle.png"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FocusVisualStyle="{x:Null}">

    <Border CornerRadius="20" Background="{StaticResource MainBgGradient}" BorderBrush="{StaticResource LineBrush}" BorderThickness="1" ClipToBounds="True">
        <Grid>
            <!-- Main Application Layout -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="{StaticResource SidebarBgBrush}" BorderBrush="{StaticResource LineBrush}" BorderThickness="0 0 1 0">
                    <Grid Margin="20 40">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Logo -->
                            <RowDefinition Height="Auto"/> <!-- Divider -->
                            <RowDefinition Height="*"/>    <!-- Menu -->
                            <RowDefinition Height="Auto"/> <!-- Status/Branding -->
                            <RowDefinition Height="Auto"/> <!-- Credits -->
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="10 0 10 30" MouseDown="StackPanel_MouseDown">
                            <Grid HorizontalAlignment="Left" Margin="0 0 0 15">
                                <Border Width="50" Height="50" CornerRadius="12" Background="{StaticResource PrimaryAccentBrush}" Opacity="0.1">
                                    <Border.Effect>
                                        <BlurEffect Radius="20"/>
                                    </Border.Effect>
                                </Border>
                                <Image Source="pack://application:,,,/Assets/Images/logo_innercircle.png" Height="45" Width="45" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="FTW STUDIOS" 
                                       Foreground="{StaticResource MainTextBrush}" 
                                       FontSize="20" 
                                       Style="{StaticResource AgencyBold}"/>
                            <TextBlock Text="KIT DE FERRAMENTAS" 
                                       Foreground="{StaticResource PrimaryAccentBrush}" 
                                       FontSize="11" 
                                       Opacity="0.8"
                                       Style="{StaticResource AgencyBold}"/>
                        </StackPanel>

                        <Border Grid.Row="1" Height="1" Background="{StaticResource LineBrush}" Margin="0 0 0 30"/>

                        <uc:Menu Grid.Row="2" VerticalAlignment="Top"/>

                        <StackPanel Grid.Row="3" Margin="10 0 10 20">
                            <TextBlock Text="SISTEMA OPERACIONAL" Foreground="{StaticResource SecondaryTextBrush}" FontSize="10" Style="{StaticResource AgencyBold}"/>
                            <TextBlock Text="ESTÁVEL" Foreground="{StaticResource PrimaryAccentBrush}" FontSize="14" Style="{StaticResource AgencyBold}"/>
                        </StackPanel>

                        <uc:Credits Grid.Row="4" Margin="10 0"/>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/> <!-- Header / Title Bar -->
                        <RowDefinition Height="*"/>  <!-- Content -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="Transparent" MouseDown="StackPanel_MouseDown">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 15 0">
                            <Button Width="35" Height="30" Content="—" Click="Minimize_Click" Style="{StaticResource HeaderButtonStyle}"/>
                            <Button Width="35" Height="30" Content="✕" Click="Close_Click" Style="{StaticResource HeaderButtonStyle}" Margin="5 0 0 0"/>
                        </StackPanel>
                    </Border>

                    <!-- Content Container -->
                    <Border Grid.Row="1" Margin="40" Background="{StaticResource CardGradientBrush}" CornerRadius="20" BorderBrush="{StaticResource LineBrush}" BorderThickness="1">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="PageTitle" Grid.Row="0" Text="OTIMIZADOR DE TEXTURAS" Foreground="{StaticResource MainTextBrush}" FontSize="24" Style="{StaticResource AgencyBold}" Margin="0 0 0 30"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <Grid x:Name="ContentHost">
                                    <uc:TextureOptimization x:Name="OptimizeView" Visibility="Visible"/>
                                    <uc:DiagnosticView x:Name="DiagnosticView" Visibility="Collapsed"/>
                                    <uc:ManifestView x:Name="ManifestView" Visibility="Collapsed"/>
                                    <uc:RenameView x:Name="RenameView" Visibility="Collapsed"/>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Authentication Overlay -->
            <Grid x:Name="AuthOverlay" Visibility="Visible">
                <uc:LoginView x:Name="LoginControl" Visibility="Collapsed" LoginSuccess="LoginControl_LoginSuccess"/>
                <uc:LoadingView x:Name="LoadingControl" Visibility="Visible"/>
            </Grid>
        </Grid>
    </Border>
</Window>
